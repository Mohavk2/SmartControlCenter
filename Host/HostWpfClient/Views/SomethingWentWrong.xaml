<UserControl x:Class="HostWpfClient.Views.SomethingWentWrong"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HostWpfClient.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Something went wrong" FontSize="24"></TextBlock>
            <TextBlock x:Name="ErrorMessage" FontSize="16" TextWrapping="Wrap"></TextBlock>
        </StackPanel>
    </Grid>
</UserControl>
